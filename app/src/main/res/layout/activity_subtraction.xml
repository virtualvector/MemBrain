<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rohithraj.example.reganti.membrain.AdditionActivity">



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_rowWeight="2"
            android:background="#dfe3ee"
            android:layout_margin="5sp"
            android:layout_marginBottom="0sp"
            >

            <TextView
                android:id="@+id/question_textView_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="75sp"

                />
        </RelativeLayout>

        <GridLayout
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_width="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            >

            <Button
                android:id="@+id/option_2_button_sub"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="#8b9dc3"
                android:onClick="option2Clicked"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/option_3_button_sub"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="#8b9dc3"
                android:onClick="option3Clicked"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/option_4_button_sub"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="#8b9dc3"
                android:onClick="option4Clicked"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/option_1_button_sub"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="#8b9dc3"
                android:onClick="option1Clicked"
                android:textColor="#ffffff"
                android:textSize="25sp" />

        </GridLayout>
    </GridLayout>
</android.widget.RelativeLayout>
